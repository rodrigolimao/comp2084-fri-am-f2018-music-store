@model IEnumerable<fri_am_music_store.Models.Album>

@{
    ViewBag.Title = "Albums";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.genre Albums</h2>

<section class="container">
    @foreach (var item in Model)
    {
    <div class="col-md-4 text-center well">
        <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
        <img src="@item.AlbumArtUrl" alt="@item.Title" />
        <div>
            @Html.DisplayFor(modelItem => item.Artist.Name)<br />
            @Html.DisplayFor(modelItem => item.Price)
        </div>
        @*<input name="Count" id="Count" type="number" min="1" placeholder="Quantity" />*@
        <a href="/Store/AddToCart?AlbumId=@item.AlbumId">
            <button class="btn btn-primary">Add to Cart</button>
        </a>       
    </div>
     }
</section>

